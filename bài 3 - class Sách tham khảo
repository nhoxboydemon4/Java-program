

import java.util.ArrayList;
public class Sach_tham_khao extends Sach{
    
    private String Linh_vuc;
    private int chuong;
    private ArrayList<chuong> chuongs;
    
    public Sach_tham_khao(){
        super();
    }
     public Sach_tham_khao( int ma, String ten, String tac, double gia, 
             int trang, int nam,String Linh_vuc,int chuong, ArrayList<chuong> chuongs){
        super(ma, ten, tac, gia, trang, nam);
        this.Linh_vuc = Linh_vuc;
        this.chuong = chuong;
        this.chuongs = chuongs;
     
    }
     
    public int getchuong() {
        return chuong;
    }
    public String getLinh_vuc() {
        return Linh_vuc;
    }
     public void setlinhvuc(String ten) {
        this.Linh_vuc = Linh_vuc;
    }
     public void setchuong(int ten) {
        this.chuong = chuong;
    }

    public ArrayList<chuong> getChuongs() {
        return chuongs;
    }
    public void setChuongs(ArrayList<chuong> chuongs) {
        this.chuongs = chuongs;
    }
    @Override
    public String toString() {
        return super.toString() + ", Linh vuc cua sach: " + Linh_vuc + 
                " ,So chuong cua sach:" +chuong; 
    }
}

