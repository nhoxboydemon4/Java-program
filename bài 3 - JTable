    private void themActionPerformed(java.awt.event.ActionEvent evt) {                                     
        if(stk.isSelected()){    
        Sach_tham_khao s = new Sach_tham_khao();
        s.setMaSach(Integer.parseInt(txtma.getText()));
        s.setName(txtten.getText());
        s.settac(txttac.getText());
        s.settrang(Integer.parseInt(txttrang.getText()));
        s.setgia(Double.parseDouble(txtgia.getText()));
        s.setyear(Integer.parseInt(txtnam.getText()));
        s.setlinhvuc(q.getLv());
        s.setchuong(q.getC());
        list.add(s); // them vao danh sach Sach
        showResult();
        
         }
        if(tc.isSelected()){
        Tap_chi s = new Tap_chi();
        s.setMaSach(Integer.parseInt(txtma.getText()));
        s.setName(txtten.getText());
        s.settac(txttac.getText());
        s.settrang(Integer.parseInt(txttrang.getText()));
        s.setgia(Double.parseDouble(txtgia.getText()));
        s.setyear(Integer.parseInt(txtnam.getText()));
        list1.add(s); // them vao danh sach Sach
        showResult1();
        }
    }                                    

    private String loai(){
        String a = null;
    if(stk.isSelected()){
            a = "tap chi";
        }
        if(tc.isSelected()){
            a = "tap chi";
        }
        return a;
    }

    
    private void resestActionPerformed(java.awt.event.ActionEvent evt) {                                       
        txtten.setText(" ");
        txttac.setText(" ");
        txtgia.setText(" ");
        txtma.setText(" ");
        txtnam.setText(" ");
        txttrang.setText(" ");
        
    }                                      

    private void XoaActionPerformed(java.awt.event.ActionEvent evt) {                                    
        if(jTable2.getSelectedRow()>=0)
        model.removeRow(jTable2.getSelectedRow());
        if(jTable1.getSelectedRow()>=0)
        model1.removeRow(jTable1.getSelectedRow());
    }                                   

    private void stkActionPerformed(java.awt.event.ActionEvent evt) {                                    
        q.setVisible(true);      
    }                                   

    private void tcActionPerformed(java.awt.event.ActionEvent evt) {                                   
       w.setVisible(true);
    }                                  

    public void showResult(){
        Sach_tham_khao s = list.get(list.size()-1);
        model.addRow(new Object[]{
             s.getMaSach(), s.getName(), s.gettac() ,s.gettrang(), s.getgia(), s.get_Year(),q.getLv(),q.getC()});
    }
    public void showResult1(){
        Tap_chi s = list1.get(list1.size()-1);
        model1.addRow(new Object[]{
             s.getMaSach(), s.getName(), s.gettac() ,s.gettrang(), s.getgia(), s.get_Year(),w.getTen()});
    }
    public void showResult3(ArrayList<Tap_chi> aTC){
        for(int i = 0 ; i < aTC.size(); i++)
        model1.addRow(new Object[]{
             aTC.get(i).getMaSach(), aTC.get(i).getName(), aTC.get(i).gettac() ,aTC.get(i).gettrang(), 
            aTC.get(i).getgia(), aTC.get(i).get_Year(),aTC.get(i).getTen_tap_chi()});
    }
    public void showResult4(ArrayList<Sach_tham_khao> aSTK){
        for(int i = 0 ; i < aSTK.size(); i++)
        model.addRow(new Object[]{
             aSTK.get(i).getMaSach(), aSTK.get(i).getName(), aSTK.get(i).gettac() ,aSTK.get(i).gettrang(), aSTK.get(i).getgia(), 
            aSTK.get(i).get_Year(),aSTK.get(i).getLinh_vuc(),aSTK.get(i).getchuong()});
    }
